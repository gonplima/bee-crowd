xy = input().split()
x = int(xy[0])
y = int(xy[1])
a = 4.00
b = 4.50
c = 5.00
d = 2.00
e = 1.50
if x == 1:
    print("Total: R$ {:.2f}". format(a*y))
if x == 2:
    print("Total: R$ {:.2f}". format(b*y))
if x == 3:
    print("Total: R$ {:.2f}". format(c*y))
if x == 4:
    print("Total: R$ {:.2f}". format(d*y))
if x == 5:
    print("Total: R$ {:.2f}". format(e*y))
